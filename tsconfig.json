{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "~/*": ["app/assets/*"]
    },
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "useDefineForClassFields": false
  },
  "include": ["app/assets/**/*"]
}
