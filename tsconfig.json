{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2017", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2017",
    "useDefineForClassFields": false
  },
  "include": ["app/javascript/**/*.ts"]
}
